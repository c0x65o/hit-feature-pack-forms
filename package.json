{
  "name": "@hit/feature-pack-forms",
  "version": "1.0.50",
  "description": "Runtime Forms feature pack with builder + CRUD entries + search + reference linking. Uses @hit/ui-kit for shell-agnostic UI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./pages/*": {
      "types": "./dist/pages/*.d.ts",
      "import": "./dist/pages/*.js",
      "require": "./dist/pages/*.js",
      "default": "./dist/pages/*.js"
    },
    "./schema": {
      "types": "./dist/schema/forms.d.ts",
      "import": "./dist/schema/forms.js",
      "require": "./dist/schema/forms.js",
      "default": "./dist/schema/forms.js"
    },
    "./server/api/*": {
      "types": "./dist/server/api/*.d.ts",
      "import": "./dist/server/api/*.js",
      "require": "./dist/server/api/*.js",
      "default": "./dist/server/api/*.js"
    }
  },
  "files": [
    "dist",
    "feature-pack.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@hit/acl-utils": "*",
    "@hit/ui-kit": "*",
    "drizzle-orm": "^0.38.0",
    "drizzle-zod": ">=0.7.0",
    "lucide-react": "^0.460.0",
    "next": "^15.5.9",
    "react": "^19.2.3",
    "recharts": "^2.12.7",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@hit/acl-utils": "github:c0x65o/hit-acl-utils#cfa9481d9da5b1a73642efc56fa3ca76cb6b7cac",
    "@hit/ui-kit": "github:c0x65o/hit-ui-kit#4237e657aed7de52c31642dd5c27d0cc4bcbc9cf",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "drizzle-orm": "^0.38.0",
    "drizzle-zod": "^0.7.0",
    "lucide-react": "^0.460.0",
    "next": "^15.5.9",
    "recharts": "^2.12.7",
    "typescript": "^5",
    "zod": "^4.0.0"
  },
  "keywords": [
    "hit",
    "feature-pack",
    "forms",
    "crud",
    "dynamic-forms",
    "ui-kit"
  ],
  "license": "MIT"
}
